@model IEnumerable<EcommerceModule.Models.ProductItem>

@{ ViewData["Title"] = "Index"; }

<h1>All Products Here</h1>
<div class="container row p-0 m-0">
    <div class="col-9"><a asp-action="Index">Refresh</a></div>

    <div class="col-3 "><a asp-controller="ProductItems" asp-action="Search" class="btn btn-primary">Search Product Here</a></div>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Image_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td hidden>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td hidden>
        @Html.DisplayFor(modelItem => item.Image_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rating)
    </td>
    <td hidden>
        @Html.DisplayFor(modelItem => item.IsAvailable)
    </td>
    <td>
        <a class="btn btn-outline-info" asp-area="" asp-controller="ProductItems" asp-action="Edit" asp-route-id="@item.Id">Rate</a>
        <a class="btn btn-outline-success" asp-area="" asp-controller="Wishlist" asp-action="AddItem" asp-route-id="@item.Id.ToString()">Add To WishList</a>
        <a class="btn btn-success" asp-area="" asp-controller="ProceedToBuy" asp-action="Details" asp-route-id="@item.Id.ToString()">Proceed To Buy</a>
    </td>
</tr>}
    </tbody>
</table>

